<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>

  
    <h1>Here is what you ordered! <%= @order.email %></h1>

    <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
      <% @order_total = 0 %>
      <% @order_items.each do |item| %>
          <% product = Product.find_by(id: item["product_id"]) %>
          <% @order_total += item["total_price_cents"] %>
          <tr>
            <td>
                <%= image_tag product.image.tiny %>
              </td>
              <td>
                  <h4><%= product.name %></h4>
                  <br>
                  <p><%= product.description %></p>
              </td>
              <td>
                <%= item["item_price_cents"] %>
              </td>
              <td>
                <%= item["quantity"] %>
              </td>
              <td>
                <%= item["total_price_cents"] %>
              </td>
          </tr>
        <% end %>
      </tbody>
        <tfoot>
          <tr>
            <th colspan="4">
              TOTAL:
            </th>
            <th>
              <%= @order_total %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>



  </body>
</html>